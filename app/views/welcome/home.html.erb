<%# Add the Facebook login link here %>
<% if session[:user_id] %>
    <h1><%= @user.name %></h1>
    <h1>Email: <%= @user.email %></h1>
    <h2>Facebook UID: <%= @user.uid %></h2>
    <img src="<%= @user.image %>">
    <%= link_to "Logout", logout_path, method: :delete %>
<% else %>
    <%= link_to 'Log in to Facebook', '/auth/facebook' %>
<% end %>